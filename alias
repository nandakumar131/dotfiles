
alias reload!='. ~/.zshrc'

alias ll='lsd -lh'
alias la='ls -a'
alias tree='lsd --tree'

#alias vi='nvim'
alias g='git'

alias cgrep='grep --color'

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

alias c=pbcopy

alias gbc='git rev-parse --abbrev-ref HEAD | c'

alias sc='glow ~/Workspace/schedule.md'
alias esc='nvim ~/Workspace/schedule.md'
alias notes='nvim ~/Workspace/Notes/scratchpad.md'
